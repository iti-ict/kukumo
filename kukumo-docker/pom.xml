<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">

    <modelVersion>4.0.0</modelVersion>

    <!-- inherited configuration -->
    <parent>
        <groupId>iti.kukumo</groupId>
        <artifactId>kukumo-project</artifactId>
        <version>1</version>
        <relativePath>../pom.xml</relativePath>
    </parent>

    <!-- coordinates -->
    <artifactId>kukumo-docker</artifactId>
    <version>1.2.3</version>

    <properties>
        <kukumo.launcher.path>${parent.basedir}/kukumo/kukumo-launcher</kukumo.launcher.path>
        <docker.image.name>nexus-kukumo.iti.upv.es/kukumo</docker.image.name>
    </properties>

    <dependencies>
        <dependency>
            <groupId>iti.kukumo</groupId>
            <artifactId>kukumo-core-l10n</artifactId>
            <version>1.2.1</version>
        </dependency>

        <dependency>
            <groupId>iti.kukumo</groupId>
            <artifactId>kukumo-html-report</artifactId>
            <version>1.2.1</version>
        </dependency>

        <dependency>
            <groupId>iti.kukumo</groupId>
            <artifactId>kukumo-amqp</artifactId>
            <version>1.1.0</version>
        </dependency>
        <dependency>
            <groupId>iti.kukumo</groupId>
            <artifactId>kukumo-amqp-l10n</artifactId>
            <version>1.1.0</version>
        </dependency>

        <dependency>
            <groupId>iti.kukumo</groupId>
            <artifactId>kukumo-db</artifactId>
            <version>1.1.0</version>
        </dependency>
        <dependency>
            <groupId>iti.kukumo</groupId>
            <artifactId>kukumo-db-l10n</artifactId>
            <version>1.1.0</version>
        </dependency>

        <dependency>
            <groupId>iti.kukumo</groupId>
            <artifactId>kukumo-io</artifactId>
            <version>1.1.0</version>
        </dependency>
        <dependency>
            <groupId>iti.kukumo</groupId>
            <artifactId>kukumo-io-l10n</artifactId>
            <version>1.1.0</version>
        </dependency>

        <dependency>
            <groupId>iti.kukumo</groupId>
            <artifactId>kukumo-rest</artifactId>
            <version>1.2.0</version>
        </dependency>
        <dependency>
            <groupId>iti.kukumo</groupId>
            <artifactId>kukumo-rest-l10n</artifactId>
            <version>1.2.0</version>
        </dependency>
    </dependencies>

    <build>
        <plugins>

            <!-- assemble staging folder distribution -->
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-assembly-plugin</artifactId>
                <executions>
                    <execution>
                        <id>make-assembly</id>
                        <phase>prepare-package</phase>
                        <goals>
                            <goal>single</goal>
                        </goals>
                        <configuration>
                            <descriptors>
                                <descriptor>assembly/distribution.xml</descriptor>
                            </descriptors>
                            <appendAssemblyId>false</appendAssemblyId>
                            <finalName>assembly</finalName>
                        </configuration>
                    </execution>
                    <execution>
                        <id>make-package</id>
                        <phase>prepare-package</phase>
                        <goals>
                            <goal>single</goal>
                        </goals>
                        <configuration>
                            <descriptors>
                                <descriptor>assembly/package.xml</descriptor>
                            </descriptors>
                            <appendAssemblyId>false</appendAssemblyId>
                            <finalName>kukumo-docker</finalName>
                        </configuration>
                    </execution>
                </executions>
            </plugin>

            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>exec-maven-plugin</artifactId>
                <version>3.0.0</version>
                <executions>
                    <execution>
                        <id>build</id>
                        <phase>install</phase>
                        <goals>
                            <goal>exec</goal>
                        </goals>
                    </execution>
                </executions>
                <configuration>
                    <executable>docker</executable>
                    <arguments>
                        <argument>build</argument>
                        <argument>.</argument>
                        <argument>-t</argument>
                        <argument>${docker.image.name}:${version}</argument>
                    </arguments>
                </configuration>
            </plugin>

        </plugins>
    </build>

</project>