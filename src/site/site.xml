<project xmlns="http://maven.apache.org/DECORATION/1.6.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/DECORATION/1.6.0 http://maven.apache.org/xsd/decoration-1.6.0.xsd"
>
   <skin>
        <groupId>org.apache.maven.skins</groupId>
        <artifactId>maven-fluido-skin</artifactId>
        <version>1.7</version>
    </skin>

    <custom>
        <fluidoSkin>
            <topBarEnabled>true</topBarEnabled>
            <topBarIcon>
                <name>Kukumo</name>
                <alt>Kukumo</alt>
                <src>/images/kukumo.png</src>
                <href>/index.html</href>
            </topBarIcon>
            <navBarStyle>navbar-inverse</navBarStyle>
            <sideBarEnabled>true</sideBarEnabled>
            <sourceLineNumbersEnabled>false</sourceLineNumbersEnabled>
            <leftColumnClass>span2</leftColumnClass>
            <bodyColumnClass>span10</bodyColumnClass>
        </fluidoSkin>
    </custom>


    <bannerRight>
        <name>ITI</name>
        <src>https://www.iti.es/wp-content/uploads/logo-iti.svg</src>
        <href>https://www.iti.es</href>
        <width>170</width>
        <height>40</height>
    </bannerRight>


    <body>

        <!-- Add this to every site.xml -->
        <head>
            <![CDATA[
             <script type="text/javascript">
             $(document).ready(function () {
                $(".source").addClass("prettyprint");
                prettyPrint();
                var linkAbout = $('a').filter(function(index) { return $(this).text() === "About"; });
                var projectInformationMenu = $('a').filter(function(index) { return $(this).text() === "Project Information"; });
                linkAbout.hide();
                if (!projectInformationMenu.parent().hasClass('active')) {
                    projectInformationMenu.parent().children('ul').hide();
                    projectInformationMenu.children('span').removeClass('icon-chevron-down').addClass('icon-chevron-right');
                }
            });
            </script>
            <link rel="stylesheet" href="https://asciidoctor.org/stylesheets/styles.css">
        ]]>
        </head>


