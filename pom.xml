<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>


    <!--
        This POM is used as base for any child project in a way that it is not necessary
        manage details of each child individually. However, every child must be considered
        as an independent project, and thus, their coordinates have not to be align with
        the defined here.
        The version number will be always RELEASE regardless the versions of the children.
    -->

    <groupId>iti.kukumo</groupId>
    <artifactId>kukumo-project</artifactId>
    <packaging>pom</packaging>
    <version>1</version>

    <name>Kukumo</name>
    <description>Project containing Kukumo as well as other useful tools</description>

    <modules>
        <!-- tools -->
        <module>kukumo-tools/jext</module>
        <module>kukumo-tools/jext-spring</module>
        <module>kukumo-tools/configurer</module>
        <module>kukumo-tools/maven-fetcher</module>
        <module>kukumo-tools/testing-embedded-db</module>
        <module>kukumo-tools/slf4j-jansi</module>
        <!-- kukumo -->
        <module>kukumo/kukumo-core</module>
        <module>kukumo/kukumo-launcher</module>
        <module>kukumo/kukumo-maven-plugin</module>
        <module>kukumo/kukumo-plugin-archetype</module>
        <!-- plugins -->
        <module>kukumo-plugins/kukumo-rest</module>
        <module>kukumo-plugins/kukumo-html-report</module>
        <module>kukumo-plugins/kukumo-core-l10n</module>
        <module>kukumo-plugins/kukumo-rest-l10n</module>
        <module>kukumo-plugins/kukumo-db</module>
        <module>kukumo-plugins/kukumo-db-l10n</module>
        <module>kukumo-plugins/kukumo-spring</module>
        <!-- examples -->
        <module>kukumo-examples</module>

    </modules>


    <!--
      =============================================================
      The following configuration will be inherited by every module
      =============================================================
    -->

    <organization>
        <name>ITI - Instituto Tecnológico de Informática</name>
        <url>https://www.iti.es</url>
    </organization>
    <licenses>
        <license>
            <name>MIT License</name>
            <url>http://repository.jboss.org/licenses/mit.txt</url>
        </license>
    </licenses>

    <properties>
        <!-- encoding -->
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <!-- build versions -->
        <java.version>1.8</java.version>
        <maven.compiler.source>${java.version}</maven.compiler.source>
        <maven.compiler.target>${java.version}</maven.compiler.target>
        <!-- paths -->
        <maven.repo.local>${env.HOME}/.m2/repository</maven.repo.local>
        <!-- dependency versions -->
        <lombok.version>1.18.6</lombok.version>
        <slf4j.version>1.7.25</slf4j.version>
        <log4j.version>2.11.2</log4j.version>
        <junit.version>4.12</junit.version>
    </properties>



    <!-- basic dependencies -->
    <dependencies>

        <!-- ====================================== -->
        <!-- compile -->
        <!-- ====================================== -->
        <!-- lombok -->
        <dependency>
            <groupId>org.projectlombok</groupId>
            <artifactId>lombok</artifactId>
            <version>${lombok.version}</version>
            <scope>compile</scope>
        </dependency>
        <!-- SLF4J API -->
        <dependency>
            <groupId>org.slf4j</groupId>
            <artifactId>slf4j-api</artifactId>
            <version>${slf4j.version}</version>
        </dependency>



        <!-- ====================================== -->
        <!-- test -->
        <!-- ====================================== -->
        <!-- Log4j 2 over SLF4J -->
        <dependency>
            <groupId>org.apache.logging.log4j</groupId>
            <artifactId>log4j-slf4j-impl</artifactId>
            <version>${log4j.version}</version>
            <scope>test</scope>
        </dependency>
        <!-- JUnit testing -->
        <dependency>
            <groupId>junit</groupId>
            <artifactId>junit</artifactId>
            <version>${junit.version}</version>
            <scope>test</scope>
        </dependency>
        <!-- generic test assertions -->
        <dependency>
            <groupId>org.assertj</groupId>
            <artifactId>assertj-core</artifactId>
            <version>3.10.0</version>
            <scope>test</scope>
        </dependency>
        <!-- JSON test assertions -->
        <dependency>
            <groupId>org.skyscreamer</groupId>
            <artifactId>jsonassert</artifactId>
            <version>1.5.0</version>
            <scope>test</scope>
        </dependency>

    </dependencies>


    <build>
        <plugins>

            <!-- JaCoCo coverage -->
            <plugin>
                <groupId>org.jacoco</groupId>
                <artifactId>jacoco-maven-plugin</artifactId>
                <version>0.8.2</version>
            </plugin>

            <!-- Use any .md file from  /* and /docs/* as a site resource -->
            <plugin>
                <artifactId>maven-resources-plugin</artifactId>
                <version>2.7</version>
                <executions>
                    <execution>
                        <id>copy-markdown-docs</id>
                        <phase>pre-site</phase>
                        <goals>
                            <goal>copy-resources</goal>
                        </goals>
                        <configuration>
                            <outputDirectory>${basedir}/src/site/markdown</outputDirectory>
                            <overwrite>true</overwrite>
                            <resources>
                                <resource>
                                    <directory>${basedir}/docs</directory>
                                    <includes>
                                        <include>*.md</include>
                                    </includes>
                                </resource>
                            </resources>
                        </configuration>
                    </execution>
                </executions>
            </plugin>

            <!-- Uses README.md as the main page of the site -->
            <plugin>
                <groupId>com.coderplus.maven.plugins</groupId>
                <artifactId>copy-rename-maven-plugin</artifactId>
                <version>1.0.1</version>
                <executions>
                    <execution>
                        <id>copy-markdown-index</id>
                        <phase>pre-site</phase>
                        <goals>
                            <goal>copy</goal>
                        </goals>
                        <configuration>
                            <sourceFile>${basedir}/README.md</sourceFile>
                            <destinationFile>${basedir}/src/site/markdown/index.md</destinationFile>
                        </configuration>
                    </execution>
                </executions>
            </plugin>



            <!-- specific version of maven compiler -->
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <version>3.8.0</version>
            </plugin>

            <!-- generate additional jar with sources -->
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-source-plugin</artifactId>
                <version>3.0.1</version>
                <executions>
                    <execution>
                        <goals>
                            <goal>jar</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>

            <!-- maven site -->
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-site-plugin</artifactId>
                <version>3.7.1</version>
            </plugin>



        </plugins>
    </build>


    <reporting>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-project-info-reports-plugin</artifactId>
                <version>3.0.0</version>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-javadoc-plugin</artifactId>
                <version>2.8</version>
                <configuration>
                    <failOnError>false</failOnError>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-surefire-report-plugin</artifactId>
                <version>2.6</version>
            </plugin>
            <plugin>
                <groupId>org.jacoco</groupId>
                <artifactId>jacoco-maven-plugin</artifactId>
                <version>0.8.2</version>
            </plugin>
        </plugins>
    </reporting>



    <profiles>
        <!-- Local profile: upload artifacts to local folder -->
        <profile>
            <id>publish-local</id>
            <activation>
                <activeByDefault>true</activeByDefault>
            </activation>
            <distributionManagement>
                <site>
                    <id>local-site</id>
                    <url>${project.baseUri}</url>
                </site>
            </distributionManagement>
        </profile>
        <!-- Publish profile: upload artifacts to public maven repo -->
        <profile>
            <id>publish-remote</id>
            <distributionManagement>
                <repository>
                    <id>public-repo</id>
                    <url>https://mymavenrepo.com/repo/SziQkCm84TfEtYWzF4W3/</url>
                </repository>
                <site>
                    <id>local-site</id>
                    <url>${project.baseUri}</url>
                </site>

            </distributionManagement>
        </profile>

    </profiles>






</project>
