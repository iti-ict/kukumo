    <reporting>
        <plugins>
            --><!-- including javadoc in maven site --><!--
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-javadoc-plugin</artifactId>
                <version>3.0.0</version>
            </plugin>
        </plugins>
    </reporting>
-->


    <profiles>
        <profile>
            <id>local-deploy</id>
            <distributionManagement>
                <repository>
                    <id>local</id>
                    <url>file://${env.HOME}/.m2/kukumo-repository</url>
                </repository>
                <snapshotRepository>
                    <id>local-snapshots</id>
                    <url>file://${env.HOME}/.m2/kukumo-repository-snapshots</url>
                </snapshotRepository>
            </distributionManagement>
        </profile>
    </profiles>


</project>
