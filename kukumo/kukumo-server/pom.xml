<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 https://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<parent>
		<groupId>org.springframework.boot</groupId>
		<artifactId>spring-boot-starter-parent</artifactId>
		<version>2.2.4.RELEASE</version>
		<relativePath/> <!-- lookup parent from repository -->
	</parent>

	<groupId>iti.kukumo</groupId>
	<artifactId>kukumo-server</artifactId>
	<version>0.0.1</version>
	<name>kukumo-server</name>

	<properties>

		<!-- encoding -->
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
		<project.reporting.outputEncoding>UTF-8</project.reporting.outputEncoding>
		<!-- build versions -->
		<java.version>11</java.version>
		<maven.compiler.version>3.8.0</maven.compiler.version>
		<maven.compiler.release>11</maven.compiler.release>
		<maven.compiler.source>11</maven.compiler.source>
		<maven.compiler.target>11</maven.compiler.target>
		<!-- paths -->
		<maven.repo.local>${env.HOME}/.m2/repository</maven.repo.local>
		<!-- dependency versions -->
		<kukumo.core.version>1.0.1-SERVER</kukumo.core.version>
		<!-- plugin versions -->
		<jacoco.version>0.8.2</jacoco.version>
		<maven.source.plugin.version>3.0.1</maven.source.plugin.version>
		<surefire.report.version>2.6</surefire.report.version>
		<maven.site.version>3.7.1</maven.site.version>
		<maven.ant.version>1.8</maven.ant.version>
		<maven.info.reports.version>3.0.0</maven.info.reports.version>
		<maven.javadoc.version>2.8</maven.javadoc.version>
		<maven.jar.plugin.version>3.0.0</maven.jar.plugin.version>

	</properties>

	<dependencies>
		<dependency>
			<groupId>org.springframework.boot</groupId>
			<artifactId>spring-boot-starter-web</artifactId>
		</dependency>
		<dependency>
			<groupId>org.springframework.boot</groupId>
			<artifactId>spring-boot-starter-websocket</artifactId>
		</dependency>
		<dependency>
			<groupId>iti.kukumo</groupId>
			<artifactId>kukumo-core</artifactId>
			<version>${kukumo.core.version}</version>
		</dependency>

		<dependency>
			<groupId>org.springframework.boot</groupId>
			<artifactId>spring-boot-starter-test</artifactId>
			<scope>test</scope>
			<exclusions>
				<exclusion>
					<groupId>org.junit.vintage</groupId>
					<artifactId>junit-vintage-engine</artifactId>
				</exclusion>
			</exclusions>
		</dependency>
	</dependencies>

	<build>
		<plugins>
			<plugin>
				<groupId>org.springframework.boot</groupId>
				<artifactId>spring-boot-maven-plugin</artifactId>
			</plugin>
		</plugins>
	</build>

</project>
